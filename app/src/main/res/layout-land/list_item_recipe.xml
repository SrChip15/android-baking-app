<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/card_view"
	android:layout_width="match_parent"
	android:layout_height="@dimen/recipe_card_height"
	android:layout_margin="@dimen/recipe_card_all_margins"
	android:foreground="?android:attr/selectableItemBackground"
	card_view:cardCornerRadius="@dimen/recipe_card_corner_radius"
	card_view:cardElevation="@dimen/recipe_card_elevation">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal">

		<FrameLayout
			android:layout_width="@dimen/recipe_card_image_height"
			android:layout_height="match_parent">

			<ImageView
				android:id="@+id/recipe_image"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:contentDescription="@string/recipe_image"
				android:scaleType="centerCrop" />

			<TextView
				android:id="@+id/recipe_servings"
				style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="end"
				android:drawableStart="@drawable/ic_serving_size"
				android:drawablePadding="@dimen/recipe_card_servings_drawable_padding"
				android:paddingStart="@dimen/recipe_card_servings_right_padding"
				android:paddingEnd="@dimen/recipe_card_servings_left_padding"
				android:textStyle="bold"
				tools:text="8"
				tools:textColor="black" />

		</FrameLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:orientation="vertical"
			android:padding="@dimen/recipe_card_text_info">

			<TextView
				android:id="@+id/recipe_title"
				style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:fontFamily="sans-serif-smallcaps"
				android:padding="@dimen/recipe_card_text_info_title_padding"
				android:textColor="@color/recipeCardTextInfoTextColor"
				android:textSize="@dimen/recipe_card_text_info_title_text_size"
				tools:text="Recipe Name" />

			<TextView
				android:id="@+id/recipe_servings_info"
				style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:fontFamily="sans-serif"
				android:padding="@dimen/recipe_card_text_info_servings_padding"
				android:textColor="@color/recipeCardTextInfoTextColor"
				android:textSize="@dimen/recipe_card_text_info_servings_text_size"
				tools:text="Serves 8" />

		</LinearLayout>

	</LinearLayout>
</android.support.v7.widget.CardView>
